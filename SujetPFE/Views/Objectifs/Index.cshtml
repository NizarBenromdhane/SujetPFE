                @Html.DisplayFor(modelItem => item.Matricule1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MontantCredit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MontantDepot)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeProduit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.Activite)
            </td>
