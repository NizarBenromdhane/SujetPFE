@model SujetPFE.Domain.Entities.SuiviIRC

@{
    ViewData["Title"] = "Supprimer un suivi IRC";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Supprimer</h1>

<h3>Êtes-vous sûr de vouloir supprimer cet enregistrement ?</h3>
<div>
    <h4>Suivi IRC</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nom du client
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.RaisonSociale)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateVisite)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateVisite)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ChargeAffaires)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ChargeAffaires)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombreVisites)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreVisites)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombreRDV)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreRDV)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MoyenneRDV)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MoyenneRDV)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Commentaires)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Commentaires)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-action="Index">Retour à la liste</a>
    </form>
</div>