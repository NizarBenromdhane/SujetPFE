@model SujetPFE.Domain.Entities.Client

@{
    ViewData["Title"] = "Créer un client";
}

<h1>Créer un client</h1>

<form asp-action="Create">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <label asp-for="RaisonSociale" class="control-label">Raison sociale</label>
        <input asp-for="RaisonSociale" class="form-control" />
        @Html.ValidationMessageFor(model => model.RaisonSociale, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label asp-for="GroupeId" class="control-label">Groupe</label>
        <select asp-for="GroupeId" class="form-control" asp-items="ViewBag.GroupeId"></select>
        @Html.ValidationMessageFor(model => model.GroupeId, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label asp-for="Charge" class="control-label">Chargé de compte</label>
        <input asp-for="Charge" class="form-control" />
        @Html.ValidationMessageFor(model => model.Charge, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label asp-for="Activite" class="control-label">Activité</label>
        <input asp-for="Activite" class="form-control" />
        @Html.ValidationMessageFor(model => model.Activite, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label asp-for="SousActivite" class="control-label">Sous-activité</label>
        <input asp-for="SousActivite" class="form-control" />
        @Html.ValidationMessageFor(model => model.SousActivite, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label asp-for="PP" class="control-label">Personne à contacter</label>
        <input asp-for="PP" class="form-control" />
        @Html.ValidationMessageFor(model => model.PP, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label asp-for="Segments" class="control-label">Segments</label>
        <input asp-for="Segments" class="form-control" />
        @Html.ValidationMessageFor(model => model.Segments, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label asp-for="AjouteLe" class="control-label">Date d'ajout</label>
        <input type="date" asp-for="AjouteLe" class="form-control" />
        @Html.ValidationMessageFor(model => model.AjouteLe, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label asp-for="Pole" class="control-label">Pôle</label>
        <input asp-for="Pole" class="form-control" />
        @Html.ValidationMessageFor(model => model.Pole, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label asp-for="RC" class="control-label">RC</label>
        <input asp-for="RC" class="form-control" />
        @Html.ValidationMessageFor(model => model.RC, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label asp-for="CTX" class="control-label">CTX</label>
        <input asp-for="CTX" class="form-control" />
        @Html.ValidationMessageFor(model => model.CTX, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label asp-for="SortieLe" class="control-label">Date de sortie</label>
        <input type="date" asp-for="SortieLe" class="form-control" />
        @Html.ValidationMessageFor(model => model.SortieLe, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <input type="submit" value="Créer" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}