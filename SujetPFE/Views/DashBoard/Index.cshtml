@{
    ViewData["Title"] = "Dashboard";
}

<div class="container">
    <h1 class="mt-4">Welcome to Your Dashboard!</h1>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Recent Activity</h5>
                    <p class="card-text">Here's a summary of your recent activities...</p>
                    <ul>
                        <li>Activity 1</li>
                        <li>Activity 2</li>
                        <li>Activity 3</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Quick Links</h5>
                    <p class="card-text">Access your frequently used features quickly...</p>
                    <a href="#" class="btn btn-primary">Link 1</a>
                    <a href="#" class="btn btn-secondary">Link 2</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Statistics</h5>
                    <p class="card-text">Key statistics and data visualizations...</p>
                    <p>You can add charts and graphs here.</p>
                </div>
            </div>
        </div>
    </div>
</div>