@model IEnumerable<SujetPFE.Domain.Entities.TemplateClient>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Template Client</title>
    <link rel="stylesheet" href="~/css/styletemp.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body>
    <div class="container">
        <h1>Template Client</h1>

        <div class="filters">
            <input type="text" id="search" placeholder="Rechercher...">
            <select id="filterType">
                <option value="all">Tous les types</option>
                <option value="type1">Type 1</option>
                <option value="type2">Type 2</option>
            </select>
        </div>

        <div class="template-grid" id="templateList">
        </div>

        <button id="createTemplate">Créer un nouveau modèle</button>
    </div>

    <script src="~/js/scriptTemp.js"></script>
</body>
</html>