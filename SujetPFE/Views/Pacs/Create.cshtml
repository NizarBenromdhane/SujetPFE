@model SujetPFE.Models.Pac

@{
    ViewData["Title"] = "Créer un PAC";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <header class="header">
        <h1 class="title"><i class="fas fa-file-signature"></i> Créer un PAC</h1>
    </header>

    <main class="content">
        <section class="form-section">
            <h2 class="section-title"><i class="fas fa-folder-plus"></i> Informations Générales</h2>
            <form id="pac-form" asp-action="Create" class="form-grid">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Titre">Titre:</label>
                    <input asp-for="Titre" class="form-input" placeholder="Entrez le titre">
                    <span asp-validation-for="Titre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description">Description:</label>
                    <textarea asp-for="Description" class="form-textarea" placeholder="Ajoutez une description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DateDebut">Date de début:</label>
                    <input asp-for="DateDebut" type="date" class="form-input" />
                    <span asp-validation-for="DateDebut" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DateFin">Date de fin:</label>
                    <input asp-for="DateFin" type="date" class="form-input" />
                    <span asp-validation-for="DateFin" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Responsable">Responsable:</label>
                    <input asp-for="Responsable" class="form-input" placeholder="Entrez le responsable">
                    <span asp-validation-for="Responsable" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Statut">Statut:</label>
                    <input asp-for="Statut" class="form-input" placeholder="Entrez le statut">
                    <span asp-validation-for="Statut" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Groupe">Groupe:</label>
                    <input asp-for="Groupe" class="form-input" placeholder="Entrez le groupe">
                    <span asp-validation-for="Groupe" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Affaire">Affaire:</label>
                    <input asp-for="Affaire" class="form-input" placeholder="Entrez l'affaire">
                    <span asp-validation-for="Affaire" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="KPL">KPI:</label>
                    <input asp-for="KPL" class="form-input" placeholder="Indiquez le KPI">
                    <span asp-validation-for="KPL" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Recommandations">Recommandations:</label>
                    <textarea asp-for="Recommandations" class="form-textarea" placeholder="Ajoutez vos recommandations"></textarea>
                    <span asp-validation-for="Recommandations" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Limites">Limites:</label>
                    <textarea asp-for="Limites" class="form-textarea" placeholder="Spécifiez les limites"></textarea>
                    <span asp-validation-for="Limites" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="button" id="add-action" class="form-button"><i class="fas fa-plus-circle"></i> Ajouter une action</button>
                </div>
            </form>
        </section>

    </main>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/pac.js"></script>
    <link rel="stylesheet" href="~/css/pac.css" />
}