@model SujetPFE.Models.Pac

@{
    ViewData["Title"] = "Créer un PAC";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <style>
        /* ======================================== */
        /* Variables CSS pour le thème BIAT (conservées) */
        /* ======================================== */
        :root {
            --biat-blue: #003A75;
            --biat-light-blue: #007ACC;
            --biat-yellow: #FFC857;
            --biat-grey: #6C757D;
            --biat-light-grey: #ECECEC;
            --biat-text-dark: #212529;
            --biat-text-light: #495057;
            --biat-border: #CED4DA;
            --font-family-primary: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            --font-size-base: 16px;
            --font-size-large: 20px;
            --font-size-xlarge: 24px;
            --border-radius: 8px; /* Bords plus arrondis pour les cartes */
            --box-shadow: 0 4px 8px rgba(0, 0, 0, 0.08); /* Ombre légère pour les cartes */
            --form-label-weight: 500; /* Poids de police légèrement plus léger pour les labels */
            --input-border-radius: 6px; /* Bords arrondis pour les inputs */
        }

        /* ======================================== */
        /* Styles généraux */
        /* ======================================== */
        body {
            font-family: var(--font-family-primary);
            margin: 0;
            padding: 20px; /* Ajouter un peu de padding autour du body */
            background-color: var(--biat-light-grey);
            color: var(--biat-text-dark);
            font-size: var(--font-size-base);
            line-height: 1.6;
        }

        .create-pac-container {
            max-width: 960px; /* Augmenter un peu la largeur max */
            margin: 40px auto; /* Augmenter les marges autour du conteneur */
            background-color: #fff;
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            padding: 40px;
        }

        h1 {
            color: var(--biat-blue);
            text-align: center;
            margin-bottom: 30px; /* Réduire un peu la marge du titre */
            font-size: var(--font-size-xlarge);
            font-weight: bold;
            letter-spacing: 0.6px; /* Ajuster l'espacement des lettres */
        }

        /* ======================================== */
        /* Styles du formulaire (Cards Layout) */
        /* ======================================== */
        .card {
            background-color: #fff;
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            padding: 20px;
            margin-bottom: 20px;
        }

        .card-title {
            color: var(--biat-blue);
            font-size: var(--font-size-large);
            font-weight: bold;
            margin-bottom: 15px;
            border-bottom: 2px solid var(--biat-light-grey);
            padding-bottom: 10px;
        }

        .form-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); /* Colonnes plus flexibles */
            gap: 15px;
        }

        .form-group {
            margin-bottom: 15px; /* Réduire la marge entre les groupes */
        }

            .form-group label {
                display: block;
                font-weight: var(--form-label-weight);
                margin-bottom: 6px;
                color: var(--biat-text-light);
                font-size: 0.95em;
            }

        .form-control {
            width: 100%;
            padding: 10px; /* Réduire le padding */
            border: 1px solid var(--biat-border);
            border-radius: var(--input-border-radius);
            box-sizing: border-box;
            font-size: 0.9em;
            transition: border-color 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        }

            .form-control:focus {
                border-color: var(--biat-light-blue);
                outline: none;
                box-shadow: 0 0 0 0.2rem rgba(0, 122, 204, 0.25);
            }

        textarea.form-control {
            min-height: 80px; /* Réduire la hauteur du textarea */
        }

        .text-danger {
            color: #dc3545;
            font-size: 0.8em;
            margin-top: 3px;
            display: block;
        }

        .form-actions {
            text-align: right;
            margin-top: 30px;
        }

            .form-actions .btn {
                padding: 10px 18px;
                font-size: 0.9em;
                margin-left: 8px;
                border-radius: var(--border-radius);
                cursor: pointer;
                transition: background-color 0.3s ease;
            }

        .btn-primary {
            background-color: var(--biat-blue);
            color: white;
            border: none;
        }

            .btn-primary:hover {
                background-color: darken(var(--biat-blue), 10%);
            }

        .btn-secondary {
            background-color: var(--biat-grey);
            color: white;
            border: none;
        }

            .btn-secondary:hover {
                background-color: darken(var(--biat-grey), 10%);
            }
    </style>
</head>

<div class="create-pac-container">
    <h1>Créer un PAC</h1>

    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="card">
            <h2 class="card-title">Informations Générales</h2>
            <div class="form-grid">
                <div class="form-group">
                    <label asp-for="Titre" class="control-label">Titre</label>
                    <input asp-for="Titre" class="form-control" />
                    <span asp-validation-for="Titre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Responsable" class="control-label">Responsable</label>
                    <input asp-for="Responsable" class="form-control" />
                    <span asp-validation-for="Responsable" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="card">
            <h2 class="card-title">Dates</h2>
            <div class="form-grid">
                <div class="form-group">
                    <label asp-for="DateDebut" class="control-label">Date de début</label>
                    <input asp-for="DateDebut" type="date" class="form-control" />
                    <span asp-validation-for="DateDebut" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateFin" class="control-label">Date de fin</label>
                    <input asp-for="DateFin" type="date" class="form-control" />
                    <span asp-validation-for="DateFin" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="card">
            <h2 class="card-title">Détails du PAC</h2>
            <div class="form-grid">
                <div class="form-group">
                    <label asp-for="Statut" class="control-label">Statut</label>
                    <input asp-for="Statut" class="form-control" />
                    <span asp-validation-for="Statut" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Groupe" class="control-label">Groupe</label>
                    <input asp-for="Groupe" class="form-control" />
                    <span asp-validation-for="Groupe" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Affaire" class="control-label">Affaire</label>
                    <input asp-for="Affaire" class="form-control" />
                    <span asp-validation-for="Affaire" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="KPL" class="control-label">KPL</label>
                    <input asp-for="KPL" class="form-control" />
                    <span asp-validation-for="KPL" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Priority" class="control-label">Priorité</label>
                    <input asp-for="Priority" class="form-control" />
                    <span asp-validation-for="Priority" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Description</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recommandations" class="control-label">Recommandations</label>
                <textarea asp-for="Recommandations" class="form-control"></textarea>
                <span asp-validation-for="Recommandations" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Limites" class="control-label">Limites</label>
                <textarea asp-for="Limites" class="form-control"></textarea>
                <span asp-validation-for="Limites" class="text-danger"></span>
            </div>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Enregistrer</button>
            <a asp-action="Index" class="btn btn-secondary">Annuler</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}