@model SujetPFE.Models.Pac

@{
    ViewData["Title"] = "Détails PAC";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.min.css">
<link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet">

<style>
    .card {
        border: none;
        border-radius: 15px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

    .card-header {
        background: linear-gradient(135deg, #3a7bd5 0%, #00d2ff 100%);
        padding: 1.5rem;
    }

    .info-section {
        background-color: #f8f9fa;
        border-radius: 10px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .info-label {
        font-weight: 600;
        color: #495057;
    }

    .info-value {
        font-weight: 500;
        color: #212529;
    }

    .status-badge {
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-weight: 600;
        font-size: 0.9rem;
    }

    .alert-box {
        border-left: 4px solid;
        border-radius: 0 8px 8px 0;
    }

    .recommandations {
        border-left-color: #17a2b8;
        background-color: rgba(23, 162, 184, 0.1);
    }

    .limites {
        border-left-color: #ffc107;
        background-color: rgba(255, 193, 7, 0.1);
    }

    .detail-icon {
        font-size: 1.2rem;
        margin-right: 0.5rem;
        vertical-align: middle;
    }

    .action-buttons .btn {
        border-radius: 50px;
        padding: 0.5rem 1.5rem;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .section-title {
        position: relative;
        padding-bottom: 0.5rem;
        margin-bottom: 1.5rem;
    }

        .section-title:after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 50px;
            height: 3px;
            background: linear-gradient(90deg, #3a7bd5 0%, #00d2ff 100%);
            border-radius: 3px;
        }
</style>

<div class="container mt-4 animate__animated animate__fadeIn">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm">
                <div class="card-header text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h1 class="h4 mb-0">@ViewData["Title"]</h1>
                        <span class="status-badge bg-white text-primary">
                            @Model.Statut
                        </span>
                    </div>
                </div>

                <div class="card-body p-4">
                    <!-- Titre et Description -->
                    <div class="info-section mb-4">
                        <h2 class="h5 mb-3 text-primary">@Model.Titre</h2>
                        <p class="lead">@Model.Description</p>
                    </div>

                    <div class="row">
                        <!-- Colonne de gauche - Informations de base -->
                        <div class="col-md-6">
                            <div class="info-section">
                                <h3 class="section-title h6">Détails du projet</h3>

                                <div class="mb-3">
                                    <span class="info-label"><i class="bi bi-calendar-event detail-icon text-info"></i>Date de début:</span>
                                    <span class="info-value d-block mt-1">@Model.DateDebut.ToString("dd MMMM yyyy")</span>
                                </div>

                                <div class="mb-3">
                                    <span class="info-label"><i class="bi bi-calendar-check detail-icon text-success"></i>Date de fin:</span>
                                    <span class="info-value d-block mt-1">@Model.DateFin.ToString("dd MMMM yyyy")</span>
                                </div>

                                <div class="mb-3">
                                    <span class="info-label"><i class="bi bi-person-badge detail-icon text-warning"></i>Responsable:</span>
                                    <span class="info-value d-block mt-1">@Model.Responsable</span>
                                </div>
                            </div>
                        </div>

                        <!-- Colonne de droite - Informations complémentaires -->
                        <div class="col-md-6">
                            <div class="info-section">
                                <h3 class="section-title h6">Contexte</h3>

                                <div class="mb-3">
                                    <span class="info-label"><i class="bi bi-people-fill detail-icon text-secondary"></i>Groupe:</span>
                                    <span class="info-value d-block mt-1">@Model.Groupe</span>
                                </div>

                                <div class="mb-3">
                                    <span class="info-label"><i class="bi bi-briefcase-fill detail-icon text-primary"></i>Affaire:</span>
                                    <span class="info-value d-block mt-1">@Model.Affaire</span>
                                </div>

                                <div class="mb-3">
                                    <span class="info-label"><i class="bi bi-graph-up detail-icon text-success"></i>KPL:</span>
                                    <span class="info-value d-block mt-1">@Model.KPL</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Recommandations et Limites -->
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <div class="alert alert-box recommandations mb-3 mb-md-0">
                                <h5 class="alert-heading d-flex align-items-center">
                                    <i class="bi bi-lightbulb-fill mr-2 text-info"></i>Recommandations
                                </h5>
                                <hr>
                                <p class="mb-0">@Model.Recommandations</p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="alert alert-box limites">
                                <h5 class="alert-heading d-flex align-items-center">
                                    <i class="bi bi-exclamation-triangle-fill mr-2 text-warning"></i>Limites
                                </h5>
                                <hr>
                                <p class="mb-0">@Model.Limites</p>
                            </div>
                        </div>
                    </div>

                    <!-- Boutons d'action -->
                    <div class="action-buttons mt-4 pt-3 text-center">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary mr-2">
                            <i class="bi bi-pencil-square mr-2"></i>Modifier
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left mr-2"></i>Retour à la liste
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>