@model List<SujetPFE.Domain.Entities.CreditObjectif>

@{
    ViewData["Title"] = "Saisie Crédit Multiple";
    var periodes = new List<SelectListItem>
    {
        new SelectListItem { Value = "2025-03", Text = "Mars 2025" },
        new SelectListItem { Value = "2025-06", Text = "Juin 2025" },
        new SelectListItem { Value = "2025-09", Text = "Septembre 2025" },
        new SelectListItem { Value = "2025-12", Text = "Décembre 2025" }
    };
    var typesCredit = new List<SelectListItem>
    {
        new SelectListItem { Value = "Immobilier", Text = "Crédit Immobilier" },
        new SelectListItem { Value = "Consommation", Text = "Crédit à la Consommation" },
        new SelectListItem { Value = "Entreprise", Text = "Crédit aux Entreprises" }
    };
    var employesSelectList = ViewBag.Employes as List<SelectListItem>;
    var groupesSelectList = ViewBag.Groupes as List<SelectListItem>;
}

<div class="saisie-credit-container biat-theme full-width-container">
    <h1 class="form-title">Saisie Multiple Objectifs Solde Crédits</h1>
    <h2 class="form-subtitle">Saisie des Objectifs de Crédit</h2>

    @if (ViewBag.Message != null)
    {
        <div class="alert @(ViewBag.IsSuccess ? "alert-success" : "alert-danger")">
            @ViewBag.Message
        </div>
    }

    <form method="post">
        <div class="table-responsive">
            <table class="objectifs-table">
                <thead>
                    <tr class="header-row">
                        <th>Période</th>
                        <th>Type de Crédit</th>
                        <th>Montant Objectif (TND)</th>
                        <th>Employé (Optionnel)</th>
                        <th>Groupe (Optionnel)</th>
                        <th class="actions-header">Actions</th>
                    </tr>
                </thead>
                <tbody id="objectifs-body">
                </tbody>
            </table>
        </div>

        <button type="button" id="ajouter-objectif" class="btn btn-add mt-3"><i class="fas fa-plus-circle"></i> Ajouter un Objectif</button>

        <div class="form-group text-center mt-4">
            <button type="submit" class="btn btn-primary btn-lg"><i class="fas fa-save"></i> Enregistrer les Objectifs</button>
        </div>
    </form>
</div>

<style>
    /* Styles CSS améliorés et professionnels - BIAT Theme */
    .biat-theme {
        --biat-blue-dark: #003377; /* Deeper BIAT Blue */
        --biat-green-dark: #00803E; /* Deeper BIAT Green */
        --biat-secondary-bg: #ECECEC; /* Light gray background */
        --biat-text-color: #333;
        --biat-header-bg: #f0f0f0; /* Light gray for header */
        --biat-border-color: #ccc;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: var(--biat-text-color);
    }

    .full-width-container {
        width: 98%;
        margin: 20px auto;
        padding: 30px;
        background-color: var(--biat-secondary-bg); /* Use light gray */
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    }

    .form-title {
        color: var(--biat-blue-dark); /* Deeper BIAT Blue for title */
        margin-bottom: 30px;
        font-size: 2.8em;
        text-align: center;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.05);
    }

    .form-subtitle {
        color: #555;
        margin-bottom: 25px;
        font-size: 1.8em;
        text-align: center;
        font-weight: normal;
    }

    .table-responsive {
        overflow-x: auto;
    }

    .objectifs-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 25px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.08);
        border-radius: 12px;
        overflow: hidden;
        border: 1px solid var(--biat-border-color);
        background-color: white;
    }

        .objectifs-table thead tr {
            position: sticky;
            top: 0;
            background-color: var(--biat-header-bg); /* Light gray for header background */
            color: var(--biat-text-color); /* Dark text on header */
            z-index: 2;
            border-bottom: 2px solid var(--biat-blue-dark); /* Deeper blue for header bottom border */
        }

        .objectifs-table .header-row th {
            padding: 15px 20px;
            text-align: center;
            font-weight: bold;
            font-size: 1.1em;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .objectifs-table td {
            border-bottom: 1px solid var(--biat-border-color);
            padding: 12px 20px;
            text-align: center;
            font-size: 1em;
            vertical-align: middle;
            transition: background-color 0.2s ease-in-out;
        }

        .objectifs-table tbody tr:nth-child(even) {
            background-color: #f9f9f9; /* Very light gray for even rows */
        }

        .objectifs-table tbody tr:hover {
            background-color: #e6f7ff; /* Very light blue on hover */
        }

    .actions-header {
        text-align: center;
    }

    /* Styles spécifiques pour les champs de formulaire */
    .form-control {
        padding: 10px 12px;
        border: 1px solid var(--biat-border-color);
        border-radius: 8px;
        font-size: 1em;
        width: calc(100% - 24px);
        box-sizing: border-box;
        height: 42px;
        transition: border-color 0.2s ease-in-out;
        background-color: white; /* Ensure white input backgrounds */
    }

        .form-control:focus {
            border-color: var(--biat-green-dark); /* Deeper BIAT Green on focus */
            outline: none;
            box-shadow: 0 0 6px rgba(0, 128, 62, 0.4); /* Green focus glow */
        }

    select.form-control {
        height: 42px;
        padding: 10px;
    }

    input[type="number"].form-control {
        padding: 10px 14px;
    }

    /* Boutons */
    .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        font-size: 1.1em;
        font-weight: bold;
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
        box-shadow: 0 3px 5px rgba(0, 0, 0, 0.1);
        padding: 12px 20px;
    }

    .btn-primary {
        background-color: var(--biat-blue-dark); /* Deeper BIAT Blue for primary action */
        color: white;
    }

        .btn-primary:hover {
            background-color: #002966;
            box-shadow: 0 5px 7px rgba(0, 0, 0, 0.2);
        }

    .btn-secondary {
        background-color: #6c757d; /* A more standard gray */
        color: white;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            box-shadow: 0 5px 7px rgba(0, 0, 0, 0.15);
        }

    .btn-add {
        background-color: var(--biat-green-dark); /* Deeper BIAT Green for add */
        color: white;
        width: 100%;
    }

        .btn-add:hover {
            background-color: #006633;
            box-shadow: 0 5px 7px rgba(0, 0, 0, 0.15);
        }

    .btn-danger {
        background-color: #dc3545; /* Standard red for delete */
        color: white;
        font-size: 1em;
        padding: 8px 15px;
    }

        .btn-danger:hover {
            background-color: #c82333;
            box-shadow: 0 3px 5px rgba(0, 0, 0, 0.15);
        }
</style>

@section Scripts {
    <script>
        $(document).ready(function () {
            function addCreditObjectifRow() {
                var newRow = $('<tr>');

                // Période Select
                var periodSelect = $('<select>', { class: 'form-control', name: '[].Periode' });
        @foreach (var periode in periodes)
        {
            @:periodSelect.append($('<option>', { value: '@periode.Value', text: '@periode.Text' }));
        }
                var periodCell = $('<td>').append(periodSelect);

                // Type de Crédit Select
                var typeCreditSelect = $('<select>', { class: 'form-control', name: '[].TypeCredit' });
        @foreach (var type in typesCredit)
        {
            @:typeCreditSelect.append($('<option>', { value: '@type.Value', text: '@type.Text' }));
        }
                var typeCreditCell = $('<td>').append(typeCreditSelect);

                // Montant Objectif Input
                var montantInput = $('<input>', { type: 'number', class: 'form-control', name: '[].MontantObjectif', required: true });
                var montantCell = $('<td>').append(montantInput);

                // Employé Select
                var employeSelect = $('<select>', { class: 'form-control', name: '[].EmployeId' });
                employeSelect.append($('<option>', { value: '', text: '-- Sélectionner --' }));
        @if (employesSelectList != null)
        {
            foreach (var employe in employesSelectList)
            {
                @:employeSelect.append($('<option>', { value: '@employe.Value', text: '@employe.Text' }));
            }
        }
                var employeCell = $('<td>').append(employeSelect);

                // Groupe Select
                var groupeSelect = $('<select>', { class: 'form-control', name: '[].GroupeId' });
                groupeSelect.append($('<option>', { value: '', text: '-- Sélectionner --' }));
        @if (groupesSelectList != null)
        {
            foreach (var groupe in groupesSelectList)
            {
                @:groupeSelect.append($('<option>', { value: '@groupe.Value', text: '@groupe.Text' }));
            }
        }
                var groupeCell = $('<td>').append(groupeSelect);

                // Actions Cell
                var actions = $('<td class="actions-column">').append(
                    $('<button>', { type: 'button', class: 'btn btn-danger btn-sm', html: '<i class="fas fa-trash"></i> Supprimer' })
                        .on('click', function () {
                            $(this).closest('tr').remove();
                        })
                );

                newRow.append(periodCell, typeCreditCell, montantCell, employeCell, groupeCell, actions);
                $('#objectifs-body').append(newRow);
            }

            $('#ajouter-objectif').on('click', addCreditObjectifRow);

            // Ajouter une première ligne au chargement de la page
            addCreditObjectifRow();
        });
    </script>
    <partial name="_ValidationScriptsPartial" />
}