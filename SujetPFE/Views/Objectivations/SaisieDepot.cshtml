@using SujetPFE.Domain.Entities // Make SURE this namespace matches where your Groupe.cs is located
@{
    ViewData["Title"] = "Saisie Dépôt";
    var employesSelectList = ViewBag.Employes as List<SelectListItem>;
    var groupesList = ViewBag.Groupes as List<Groupe>; // Get the list of groups
}

<div class="saisie-depot-container biat-theme">
    <h2 class="page-title">Saisie Objectifs Solde Dépôts</h2>

    <div class="filters-top">
        <button class="filter-button active">31-03-2025</button>
        <button class="filter-button">30-06-2025</button>
        <button class="filter-button">30-09-2025</button>
        <button class="filter-button">31-12-2025</button>
        <button class="filter-button">31-12-2022</button>
    </div>

    <div class="commercial-selector-center">
        <label for="commercial">Employé :</label>
        <select id="commercial" class="form-control">
            <option value="">-- Sélectionner un employé --</option>
            @if (employesSelectList != null && employesSelectList.Any())
            {
                foreach (var employe in employesSelectList)
                {
                    <option value="@employe.Value">@employe.Text</option>
                }
            }
        </select>
    </div>

    <table class="objectifs-table">
        <thead>
            <tr class="header-row">
                <th rowspan="2">Groupe / GE</th>
                <th colspan="5">Encours 2023</th>
                <th colspan="5">Encours 2024</th>
                <th colspan="5">Objectifs 2025</th>
                <th rowspan="2" class="actions-column">Actions</th>
            </tr>
            <tr class="subheader-row">
                <th>Devise</th>
                <th>Tnd DAT</th>
                <th>Tnd DAV</th>
                <th>Total Tnd</th>
                <th>Total Dep</th>
                <th>Devise</th>
                <th>Tnd DAT</th>
                <th>Tnd DAV</th>
                <th>Total Tnd</th>
                <th>Total Dep</th>
                <th>Devise</th>
                <th>Tnd DAT</th>
                <th>Tnd DAV</th>
                <th>Total Tnd</th>
                <th>Total Dep</th>
            </tr>
        </thead>
        <tbody>
            @if (groupesList != null && groupesList.Any())
            {
                foreach (var groupe in groupesList)
                {
                    <tr>
                        <td>@groupe.Nom</td>
                        <td>TND</td>
                        <td><input type="text" value="1 234" /></td>
                        <td><input type="text" value="10 567" /></td>
                        <td><span class="readonly-value">11 801</span></td>
                        <td><input type="text" value="11 801" /></td>
                        <td>TND</td>
                        <td><input type="text" value="1 357" /></td>
                        <td><input type="text" value="11 624" /></td>
                        <td><span class="readonly-value">12 981</span></td>
                        <td><input type="text" value="12 981" /></td>
                        <td>TND</td>
                        <td><input type="text" value="0" /></td>
                        <td><input type="text" value="0" /></td>
                        <td><span class="readonly-value">0</span></td>
                        <td><input type="text" value="0" /></td>
                        <td class="actions-column"><button class="save-button">Sauvegarder</button></td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="17">Aucun groupe trouvé.</td></tr>
            }
        </tbody>
    </table>
</div>

<style>
    .biat-theme {
        /* Tentative d'intégration des couleurs BIAT (à ajuster si nécessaire) */
        --primary-color: #0047AB; /* Bleu BIAT (à vérifier) */
        --secondary-color: #F0F0F0; /* Gris clair */
        --accent-color: #FFA500; /* Orange (couleur d'accent potentielle) */
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
    }

    .saisie-depot-container {
        padding: 30px;
        background-color: var(--secondary-color); /* Fond gris clair */
        border-radius: 12px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.08);
    }

    .page-title {
        color: var(--primary-color);
        margin-bottom: 30px;
        font-size: 2.4em;
        font-weight: bold;
        text-align: center;
    }

    .filters-top {
        display: flex;
        justify-content: center; /* Centrer les boutons de date */
        gap: 15px;
        margin-bottom: 25px;
    }

    .filter-button {
        padding: 12px 25px;
        border: 2px solid var(--primary-color);
        border-radius: 10px;
        cursor: pointer;
        background-color: white;
        color: var(--primary-color);
        font-weight: bold;
        font-size: 1em;
        transition: background-color 0.3s, color 0.3s;
    }

        .filter-button.active {
            background-color: var(--primary-color);
            color: white;
        }

        .filter-button:hover {
            background-color: var(--primary-color);
            color: white;
        }

    .commercial-selector-center {
        display: flex;
        justify-content: center; /* Centrer la liste déroulante */
        align-items: center;
        gap: 20px;
        margin-bottom: 30px;
    }

        .commercial-selector-center label {
            font-weight: bold;
            color: #555;
            font-size: 1.1em;
        }

        .commercial-selector-center select {
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 8px;
            width: 350px;
            font-size: 1em;
        }

    .objectifs-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
        border-radius: 12px;
        overflow: hidden;
        border: 1px solid #e0e0e0;
    }

        .objectifs-table .header-row th {
            background-color: var(--primary-color);
            color: white;
            padding: 15px;
            text-align: center;
            font-weight: bold;
            font-size: 1em;
        }

        .objectifs-table .subheader-row th {
            background-color: rgba(0, 71, 171, 0.8); /* Bleu légèrement plus clair */
            color: white;
            padding: 10px;
            text-align: center;
            font-weight: bold;
            font-size: 0.9em;
        }

        .objectifs-table th[colspan] {
            background-color: var(--primary-color);
        }

        .objectifs-table td {
            border-bottom: 1px solid #e0e0e0;
            padding: 12px 15px;
            text-align: center;
            font-size: 0.95em;
        }

        .objectifs-table tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .objectifs-table input[type="text"] {
            width: 100px;
            padding: 10px;
            box-sizing: border-box;
            text-align: right;
            border: 1px solid #ccc;
            border-radius: 6px;
            font-size: 0.9em;
        }

    .readonly-value {
        display: inline-block;
        padding: 10px;
        font-size: 0.9em;
        color: #777;
    }

    .actions-column {
        text-align: center;
    }

    .save-button {
        background-color: var(--accent-color); /* Couleur d'accent pour l'action */
        color: white;
        border: none;
        border-radius: 6px;
        padding: 10px 15px;
        cursor: pointer;
        font-weight: bold;
        font-size: 0.9em;
        transition: background-color 0.3s;
    }

        .save-button:hover {
            background-color: darken(var(--accent-color), 10%);
        }
</style>

