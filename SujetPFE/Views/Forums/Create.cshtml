@model SujetPFE.Domain.Entities.Forum

@{
    ViewData["Title"] = "Créer un Nouveau Sujet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1 class="text-primary mb-4"><i class="fas fa-plus-circle mr-2"></i> Créer un Nouveau Sujet de Discussion</h1>

    <p class="lead text-muted mb-3">Partagez votre idée ou posez votre question en entrant un titre clair et en indiquant votre nom.</p>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm rounded">
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Title" class="font-weight-semibold"><i class="fas fa-heading mr-2"></i> Titre du Sujet</label>
                            <input asp-for="Title" class="form-control rounded-pill" placeholder="Entrez le titre de votre sujet" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Author" class="font-weight-semibold"><i class="fas fa-user mr-2"></i> Votre Nom</label>
                            <input asp-for="Author" class="form-control rounded-pill" placeholder="Votre nom" />
                            <span asp-validation-for="Author" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary rounded-pill shadow-sm"><i class="fas fa-check mr-2"></i> Créer le Sujet</button>
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill ml-2"><i class="fas fa-arrow-left mr-2"></i> Retour à la Liste</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
</style>